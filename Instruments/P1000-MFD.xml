  </equals>
  </condition>
  <type>text</type>
  <font>helvetica_bold</font>
  <point-size>10</point-size>
  <color>
    <red>0.8</red>
    <green>0.8</green>
    <blue>0.8</blue>
  </color>
  <chunks>
   <chunk>
   <type>literal</type>
   <text>ALT</text>
    </chunk>
  </chunks>
  <transformations>
    <transformation>
      <type>x-shift</type>
      <offset>136</offset>
    </transformation>
    <transformation>
      <type>y-shift</type>
      <offset>-168</offset>
    </transformation>
  </transformations>
</layer>

<layer>
  <name>Selected Alt-text</name>
  <condition>
  <equals>
  <property>/autopilot/locks/altitude</property>
  <value>altitude-hold</value>
  </equals>
  </condition>
  <type>text</type>
  <font>helvetica_bold</font>
  <point-size>12</point-size>
  <color>
    <red>0.5</red>
    <green>0.8</green>
    <blue>0.9</blue>
  </color>
  <chunks>
   <chunk>
   <type>number-value</type>
