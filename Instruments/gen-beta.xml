<PropertyList>
 <name>Generic beta gauge</name> <!-- CHANGE HERE -->
 <w-base>256</w-base>
 <h-base>256</h-base>
 <layers>
  <layer>
   <name>background</name>
   <w>256</w>
   <h>256</h>
   <texture>
     <path>Aircraft/NTPS/Instruments/Textures/generic2.rgb</path>
    <x1>0.0</x1>
    <x2>1.0</x2>
    <y1>0.0</y1>
    <y2>1.0</y2>
   </texture>
  </layer>

  <layer>
   <name>label</name>
   <type>text</type>
   <font>lucida</font>
   <point-size>18</point-size>
   <color>
    <red>1.0</red>
    <green>0.5</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Beta</text> <!-- CHANGE HERE -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset> <!-- CHANGE HERE -->
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-65</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>min</name>
   <type>text</type>
   <font>led</font>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>0.5</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-10</text> <!-- CHANGE HERE -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-85</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-75</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>max</name>
   <type>text</type>
   <font>led</font>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>0.5</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>10</text> <!-- CHANGE HERE -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>37</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-75</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>center</name>
   <type>text</type>
   <font>led</font>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>0.5</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>0</text> <!-- CHANGE HERE -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>70</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>center</name>
   <type>text</type>
   <font>led</font>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>0.5</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/orientation/side-slip-deg</property> <!-- CHANGE HERE -->
     <format>%5.2f</format> <!-- CHANGE HERE -->
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-30</offset> <!-- CHANGE HERE -->
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-95</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>big needle</name>
   <w>10</w>
   <h>160</h>
   <texture>
    <path>Aircraft/Instruments/Textures/misc3.rgb</path>
    <x1>0.75</x1>
    <y1>0.12</y1>
    <x2>0.8671875</x2>
    <y2>0.4296875</y2>
   </texture>
   <transformations>
    <transformation>
     <type>rotation</type>
     <property>/orientation/side-slip-deg</property> <!-- CHANGE HERE -->
     <min>-10</min> <!-- CHANGE HERE -->
     <max>10</max> <!-- CHANGE HERE -->
     <scale>13.5</scale> <!-- CHANGE HERE -->
    </transformation>     
    <transformation>
     <type>y-shift</type>
     <offset>40.0</offset>
    </transformation>
   </transformations>
  </layer>
   
 </layers>
</PropertyList>